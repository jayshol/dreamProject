<h2>Add Dream</h2>
          <form role="form" method="post" action="/add">
              <div class="form-group">
                <div class="row">                  
                  <div class="col-md-6"><label for="title">Title</label></div>
                  <div class="col-md-3 col-md-offset-3 "><label for="date">Date</label></div>
                </div>
                <div class="row">                      
                    <div class="col-md-6">
                        <input type="text" id="title" name="title"> 
                    </div>
                    <div class="col-md-3 col-md-offset-3 ">
                        <input type="date" id="date" name="date">
                    </div>
                </div>
                <div class="row">
                  <div class="col-md-12"><label for="content">Narrate Your Dream</label></div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <textarea rows=10 cols="50" id="content" name="content" class="form-control"></textarea>
                  </div>
                </div>                
                <div class="row">
                    <div class="col-md-4">
                        <input type="checkbox" name="recur" id="recur" class="form-control" >
                        <label for="recur">Recurring</label> 
                    </div>
                    <div class="col-md-4">  
                        <input type="checkbox" name="lucid" id="lucid" class="form-control">
                        <label for="lucid">Lucid</label>  
                    </div>
                    <div class="col-md-4">
                        <input type="checkbox" name="Nightmare" id="nightmare" class="form-control">
                        <label for="nightmare">Nightmare</label>
                    </div>
                </div>                              
                <div class="row">
                   <div class="col-md-12">
                       <label for="mood">Mood</label>
                       <input type="text" id="mood" name="mood" class="form-control">
                   </div>
                </div>
              <div class="row">
               <div class="col-md-12">
                   <label for="people">People</label>
                   <input type="text" id="people" name="people" class="form-control">
               </div>
             </div>
              <div class="row">
               <div class="col-md-12">
                   <label for="places">Places</label>
                   <input type="text" id="places" name="places" class="form-control">
               </div>
              </div>
              <div class="row">
               <div class="col-md-12">
                  <label for="things">Things</label>
                  <input type="text" id="things" name="things" class="form-control">
               </div>
              </div>
              <div class="row">
               <div class="col-md-12">
                  <input type="checkbox" name="role" id="role" class="form-control">
                   <label for="role">Is the dream about you?</label>
               </div>
              </div>
              <div class="row">
               <div class="col-md-12">
                  <input type="checkbox" name="private" id="private" class="form-control" >
                   <label for="private">Private</label>
               </div>
              </div>
              <div class="row">
                  <div class="col-md-2">
                      <input type="submit" class="btn btn-info" value="Add Dream">
                  </div>
                  <div class="col-md-10">
                      <a href="/cancel" class="btn btn-info">Cancel</a>                      
                  </div>
              </div>
            </div>      
          </form>



